@model IEnumerable<proyectoTienda.Models.Producto>

@{
  Layout = null;
}
@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TEXTIL SALAS</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
   
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true">
    
</head>
<body>
    <header class="header">
        <div class="container header-container">
            <div class="logo">
                <h1>TEXTIL SALAS</h1>
                
            </div>
            <nav class="main-nav" id="mainNav">
                <ul>
                    <li><a href="#" class="active">Inicio</a></li>
                    @foreach (var categoria in ViewBag.Categorias)
                    {
                        <li><a href="@Url.Action("Productos", "Home", new { categoriaId = categoria.IDCategoria })">@categoria.Nombre</a></li>
                    }
                    <li><a href="#">Ofertas</a></li>
                    <li><a href="@Url.Action("Index", "Contacto")">Contacto</a></li>
                </ul>
            </nav>
            <div class="header-actions">
                
                <div class="cart-button">
    <a asp-controller="Carrito" asp-action="Carrito" class="cart-btn" style="display: flex; align-items: center;">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
        <span class="cart-count">0</span>
    </a>
</div>

                <partial name="_LoginPartial" />
            </div>
            
        </div>
    </header>

    <main>
        <!-- Hero Banner -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h2>Elegancia y Confort</h2>
                    <p>Descubre nuestra colección premium de toallas y batas</p>
                    <div class="hero-buttons">
                        <a href="#" class="btn btn-primary">Ver Colección</a>
                        <a href="#" class="btn btn-secondary">Ofertas Especiales</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Categorías -->
        <section class="categories">
            <div class="container">
                <h2 class="section-title">Nuestras Categorías</h2>
                <div class="categories-grid">
                  @foreach (var categoria in ViewBag.Categorias)
                        {
                    <div class="category-card">
                        <div class="category-image">
                            <img src="@categoria.ImagenURL" alt="@categoria.Nombre" class="category-img">
                        </div>
                        <div class="category-content">
                            <h3>@categoria.Nombre</h3>
                            <p>@categoria.Descripcion</p>
                            <a href="@Url.Action("Productos", "Home", new { categoriaId = categoria.IDCategoria })" class="btn-text">Explorar @categoria.Nombre</a>
                        </div>
                    </div>
                  }
                </div>
            </div>
        </section>

        <!-- Promoción -->
        <section class="promo">
            <div class="container">
                <div class="promo-content">
                    <h2>25% de Descuento</h2>
                    <p>En toda nuestra colección premium</p>
                    <p class="promo-dates">Válido hasta agotar existencias</p>
                    <a href="#" class="btn btn-light">Comprar Ahora</a>
                </div>
            </div>
        </section>

      
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-about">
                    <h3>TEXTIL SALAS</h3>
                    <p>Ofrecemos la mejor calidad en toallas y batas para tu hogar, con materiales premium y diseños elegantes.</p>
                </div>
                <div class="footer-links">
                    <h4>Enlaces Rápidos</h4>
                    <ul>
                        <li><a href="#">Inicio</a></li>
                        <li><a href="#">Toallas</a></li>
                        <li><a href="#">Batas</a></li>
                        <li><a href="#">Ofertas</a></li>
                        <li><a href="#">Contacto</a></li>
                    </ul>
                </div>
                <div class="footer-contact">
                    <h4>Contacto</h4>
                    <ul>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                            <span>+34 123 456 789</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                            <span>info@luxurybath.com</span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                            <span>Calle Principal 123, Madrid</span>
                        </li>
                    </ul>
                </div>
                <div class="footer-social">
                    <h4>Síguenos</h4>
                    <div class="social-icons">
                        <a href="#" class="social-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
                        </a>
                        <a href="#" class="social-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
                        </a>
                        <a href="#" class="social-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>
                        </a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Luxury Bath. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <!-- Notificación -->
    <div class="notification success" id="notification">
        Producto añadido al carrito
    </div>

    <script src="~/js/home.js"></script>
</body>
</html>
